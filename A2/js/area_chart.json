{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"title": "Military Expenditure in Regional Totals (1988-2022)",
  "width": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/zzha0323/FIT3179/main/A2/data/Regional_totals_1988-2022.csv"
  },
  "params": [
    {
      "name": "Region_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Asia & Oceania",
          "Europe",
          "Middle East"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Americas",
          "Asia & Oceania",
          "Europe",
          "Middle East"
        ],
        "name": "Region: "
      }
    }
  ],
  "transform": [
    {
      "joinaggregate": [{"op": "sum", "field": "Regional totals", "as": "sumCounts"}],
      "groupby": ["Year"]
    },
    {"calculate": "datum.Regional totals", "as": "Count"},
    {
      "filter": "Region_Selection == null || datum.Region == Region_Selection"
    },
    {
      "filter": "datum.Region == 'Europe' || datum.Region == 'Americas' || datum.Region == 'Asia & Oceania' || datum.Region == 'Africa' || datum.Region == 'Middle East'"
    }
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "Year",
      "axis": {"format": "%Y", "tickCount": 6},
      "title": "Year"
    },
    "y": {

      "aggregate": "sum",
      "field": "Count",
      "axis": {"tickCount": 3},
      "title": "Military Costs (in billion)"
    },
    "color": {
      "field": "Region",
      "scale": {
        "domain": [
          "Africa",
          "Americas",
          "Asia & Oceania",
          "Europe",
          "Middle East"
        ],
        "range": ["#e41a1c", "#984ea3", "#ff7f00", "#377eb8", "#a6cee3"]
      },
        "legend": {"columns": 3}
      
    },
    "tooltip": [
      {"field": "Region", 
      "type": "nominal"},
      {
        "field": "Year",
        "title": "Year",
        "type": "temporal",
        "timeUnit": "year"
      },
      {
        "field": "Counts",
        "type": "quantitative",
        "title": "Counts",
        "format": ".2s"
      }
    ]
  },
  "config": {"legend": {"orient": "bottom"}}
}
