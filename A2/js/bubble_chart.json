{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "title": "Military Expenditure in Current USD (2022)",
    "width": 400,
    "height": 300,
    "padding": {"left": 0, "right": 0, "top": 2, "bottom": 0},
    "signals": [
      {"name": "cx", "update": "width / 2"},
      {"name": "cy", "update": "height / 2"},
      {"name": "gravityX", "value": 0.3},
      {"name": "gravityY", "value": 0.8}
    ],
    "data": [
      {
        "name": "table",
        "url": "https://raw.githubusercontent.com/zzha0323/FIT3179/main/A2/data/bubble.json",
        "format": {"type": "json"},
        "transform": [
          {"type": "formula", "as": "test", "expr": "datum.Region"},
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Counts<100000, null, datum.test)"
          },
          {
            "type": "formula",
            "as": "Proc",
            "expr": "if(datum.Counts<100000, null, datum.Proc)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='North Africa', ['North Africa'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='North America', ['North America'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='South America', ['South America'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='Oceania', ['Oceania'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='South Asia', ['South Asia'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='East Asia', ['East Asia'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='South East Asia', ['South East Asia'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='Central Asia', ['Central Asia'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='Central Europe', ['Central Europe'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='Eastern Europe', ['Eastern Europe'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='Western Europe', ['Western Europe'],datum.test)"
          },
          {
            "type": "formula",
            "as": "test",
            "expr": "if(datum.Region=='Middle East', ['Middle East'],datum.test)"
          },
          {
            "type": "formula",
            "as": "sizess",
            "expr": "sqrt(sqrt(datum.Counts/40))"
          }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "size",
        "domain": {"data": "table", "field": "Counts"},
        "range": [1, 2000000]
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "table", "field": "Continents"},
        "range": ["#AF7C7B", "#66c2a5", "#fc8d62", "#8da0cb", "#FF5733"]
      }
    ],
  
    "marks": [
      {
        "name": "nodes",
        "type": "symbol",
        "from": {"data": "table"},
        "encode": {
          "enter": {
            "fill": {"scale": "color", "field": "Continents"},
            "xfocus": {"signal": "cx"},
            "yfocus": {"signal": "cy"}
          },
          "update": {
            "size": {"signal": "pow(sqrt(sqrt(datum.Counts))*3, 2)", "scale": "size"},
            "stroke": {"value": "white"},
            "strokeWidth": {"value": 1},
            "tooltip": {
              "signal": "{\"Rank\": datum[\"rank\"], \"Region\": datum[\"Region\"], \"Counts\": format(datum[\"Counts\"]*1000000, \".2s\")}"
            }
          }
        },
        "transform": [
          {
            "type": "force",
            "iterations": 100,
            "static": false,
            "forces": [
              {
                "force": "collide",
                "iterations": 2,
                "radius": {"expr": "sqrt(datum.size) / 2"}
              },
              {"force": "center", "x": {"signal": "cx"}, "y": {"signal": "cy"}},
              {"force": "x", "x": "xfocus", "strength": {"signal": "gravityX"}},
              {"force": "y", "y": "yfocus", "strength": {"signal": "gravityY"}}
            ]
          }
        ]
      },
      {
        "type": "text",
        "from": {"data": "nodes"},
        "encode": {
          "enter": {
            "align": {"value": "center"},
            "baseline": {"value": "middle"},
            "fontSize": {"field": "datum.sizess"},
            "fontWeight": {"value": "bold"},
            "fill": {"value": "black"},
            "text": {"field": "datum.test"}
          },
          "update": {"x": {"field": "x"}, "y": {"field": "y", "offset": -2}}
        }
      },
      {
        "type": "text",
        "from": {"data": "nodes"},
        "encode": {
          "enter": {
            "align": {"value": "center"},
            "baseline": {"value": "middle"},
            "fontSize": {"field": "datum.sizess"},
            "fontWeight": {"value": "bold"},
            "fill": {"value": "black"},
            "text": {"field": "datum.Proc"}
          },
          "update": {"x": {"field": "x"}, "y": {"field": "y", "offset": 20}}
        }
      },
      {
        "type": "text",
        "from": {"data": "nodes"},
        "encode": {
          "enter": {
            "align": {"value": "center"},
            "baseline": {"value": "middle"},
            "fontSize": {"field": "datum.sizess"},
            "fontWeight": {"value": "bold"},
            "fill": {"value": "black"},
            "text": {"field": "datum.rank"},
            "radius": {"value": 21}
          },
          "update": {"x": {"field": "x"}, "y": {"field": "y"}}
        }
      }
    ],
  
    "legends": [
      {
        "offset": 33,
        "fill": "color",
        "title": "Continents",
        "encode": {"labels": {"update": {"text": {"field": "value"}}}}
      }
    ],
    "config": {"axis": {"labels": false, "domain": false, "ticks": false}}
  }
  