{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 500,
  "height": 325,
  "signals": [
    {
      "name": "layout",
      "value": "squarify"
    },
    {
      "name": "aspectRatio"
    }
  ],
  "title": {
    "text": "Top Cosmetic Regions in the US (2020)"
  },
  "data": [
    {
      "name": "tree",
      "url": "https://raw.githubusercontent.com/zzha0323/FIT3179/main/A2/data/tree.json",
      "transform": [
        {
          "type": "formula",
          "as": "sizes",
          "expr": "sqrt(datum.size/1000)"
        },
        {
          "type": "stratify",
          "key": "id",
          "parentKey": "parent"
        },
        {
          "type": "treemap",
          "field": "size",
          "sort": {
            "field": "value"
          },
          "round": true,
          "method": {
            "signal": "layout"
          },
          "ratio": {
            "signal": "aspectRatio"
          },
          "size": [
            {
              "signal": "width"
            },
            {
              "signal": "height"
            }
          ]
        }
      ]
    },
    {
      "name": "nodes",
      "source": "tree",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.children"
        },
        {
          "type": "filter",
          "expr": "datum.name!='Regions'"
        }
      ]
    },
    {
      "name": "leaves",
      "source": "tree",
      "transform": [
        {
          "type": "filter",
          "expr": "!datum.children"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "nodes",
        "field": "name"
      },
      "range": [
        "#993404",
        "#d95f0e",
        "#fe9929",
        "#fed98e",
        "#ffeda0"
      ]
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {
        "data": "nodes"
      },
      "interactive": false,
      "encode": {
        "enter": {
          "fill": {
            "scale": "color",
            "field": "name"
          }
        },
        "update": {
          "x": {
            "field": "x0"
          },
          "y": {
            "field": "y0"
          },
          "x2": {
            "field": "x1"
          },
          "y2": {
            "field": "y1"
          }
        }
      }
    },
    {
      "type": "rect",
      "from": {
        "data": "leaves"
      },
      "encode": {
        "enter": {
          "stroke": {
            "value": "#fff"
          },
          "tooltip": {
            "signal": "{\"Country\": datum[\"name\"], \"Costs (US$ bn)\": format(datum[\"size\"], \".3s\")}"
          }
        },
        "update": {
          "x": {
            "field": "x0"
          },
          "y": {
            "field": "y0"
          },
          "x2": {
            "field": "x1"
          },
          "y2": {
            "field": "y1"
          },
          "fill": {
            "value": "transparent"
          }
        },
        "hover": {
          "fill": {
            "value": "white"
          }
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "leaves"
      },
      "interactive": false,
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "bottom"
          },
          "fill": {
            "value": "#000"
          },
          "text": {
            "field": "names"
          },
          "fontSize": {
            "field": "sizes"
          }
        },
        "update": {
          "x": {
            "signal": "0.5 * (datum.x0 + datum.x1)"
          },
          "y": {
            "signal": "0.5 * (datum.y0 + datum.y1)"
          }
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "leaves"
      },
      "interactive": false,
      "encode": {
        "enter": {
          "type": "filter",
          "expr": "size > 18000",
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "top"
          },
          "fill": {
            "value": "#000"
          },
          "text": {
            "field": "sizess"
          },
          "fontSize": {
            "field": "sizes"
          }
        },
        "update": {
          "x": {
            "signal": "0.5 * (datum.x0 + datum.x1)"
          },
          "y": {
            "signal": "0.5 * (datum.y0 + datum.y1)",
            "offset": 6
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Regions",
      "encode": {
        "labels": {
          "update": {
            "text": {
              "field": "value"
            }
          }
        }
      }
    }
  ],
  "config": {}
}