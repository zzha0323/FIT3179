{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 8 Countries in Military Expenditure",
  "width": 600,
  "height": 300,
  "params": [
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 1992,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/zzha0323/FIT3179/main/A2/data/Top_8_countries-1992-2022.csv"
  },
  "transform": [
    {
      "filter": "datum.Year == Year_selection"
    },
    {
      "calculate": "datum.Costs/1000",
      "as": "count"
    }
  ],
  "mark": {
    "type": "bar",
    "fill": "#235789",
    "tooltip": true
  },
  "encoding": {
    "y": {
      "field": "count",
      "type": "quantitative",
      "title": "Military Expenditure (US$ bn)",
      "format": ".5s",
      "axis": {
        "tickCount": 5
      },
      "scale": {
        "domain": [
          0,
          1000
        ]
      }
    },
    "x": {
      "field": "Country",
      "type": "ordinal",
      "title": "Country",
      "axis": {
        "labelAngle": 0
      }
    }
  },
  "config": {}
}