{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Military Expenditure of Top 8 Countries (2022)",
  "width": 380,
  "height": 218,
  "data": {
    "url": "https://raw.githubusercontent.com/zzha0323/FIT3179/main/A2/data/pie.csv"
  },
  "transform": [
    {
      "calculate": "datum.Total / 1000",
      "as": "Total_billion"
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {
      "field": "Total_billion",
      "type": "quantitative",
      "title": "Military Expenditure (US$ bn)"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {"domain": ["United States", "China", "Other"], "range": ["#d95f0e", "#fe9929", "#fed98e"]}
    },
    "tooltip": [
      {
        "field": "Country",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Total_billion",
        "type": "quantitative",
        "title": "Expenditure (US$ bn)",
        "format": ".1f"
      }
    ]
  }
}