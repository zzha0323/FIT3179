{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Military Expenditure of Top 8 Countries (2022)",
  "width": 380,
  "height": 218,
  "data": {
    "url": "https://raw.githubusercontent.com/zzha0323/FIT3179/main/A2/data/pie.csv"
  },
  "transform": [
    {
      "calculate": "datum.Total / 1000",
      "as": "count"
    },
    {
      "calculate": "(datum.Total/1589512.3)",
      "as": "percentage_total"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "outerRadius": 110
      },
      "encoding": {
        "theta": {
          "field": "count",
          "type": "quantitative",
          "title": "Military Expenditure (US$ bn)",
          "stack": true
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "domain": [
              "United States",
              "China",
              "Other"
            ],
            "range": [
              "#d95f0e",
              "#fe9929",
              "#fed98e"
            ]
          }
        },
        "tooltip": [
          {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Expenditure (US$ bn)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "radius": 65,
        "align": "center",
        "baseline": "middle",
        "fontSize": 20,
        "fontWeight": "bold",
        "color": "white"
      },
      "encoding": {
        "text": {
          "field": "percentage_total",
          "type": "quantitative",
          "format": ".1%"
        },
        "theta": {
          "field": "count",
          "type": "quantitative",
          "stack": true
        },
        "tooltip": [
          {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Expenditure (US$ bn)",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {}
}